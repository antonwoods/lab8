<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </td>
  <td class="micropost">
    <span class="user">
    	
      <%==feed_item.user.name%> posted this question: 
    </span>
    <span class="content"><%= feed_item.title %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  </td>
  <td>
  	
  	<%= form_for @response do |f| %>
 <%= render 'shared/error_messages', :object => f.object %>

     <%= f.hidden_field :responseid, :value =>feed_item.id %>

  <div class="field">
    <%= f.text_area :voice %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
  	
  </td>
  
  
  <% if current_user?(feed_item.user) %>
  <td>
    <%= link_to "delete", feed_item, :method => :delete,
                                     :confirm => "You sure?",
                                     :title => feed_item.title %>
  </td>
  <% end %>
</tr>